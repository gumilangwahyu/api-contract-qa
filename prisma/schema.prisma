// This is the Prisma schema file defining the database models for the API contract QA system.

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String   
  email     String   @unique
  projects   Project[]
}

model Project {
  id        String   @id @default(cuid())
  name      String   
  userId    String   
  user      User     @relation(fields: [userId], references: [id])
  endpoints  Endpoint[]
}

model Endpoint {
  id        String   @id @default(cuid())
  name      String   
  projectId String   
  project   Project  @relation(fields: [projectId], references: [id])
  testCases  TestCase[]
}

model TestCase {
  id        String   @id @default(cuid())
  name      String   
  endpointId String   
  endpoint  Endpoint  @relation(fields: [endpointId], references: [id])
  results   TestResult[]
}

model TestResult {
  id          String   @id @default(cuid())
  testCaseId  String   
  status      String   // e.g., "passed", "failed"
  details      String   
  testCase    TestCase @relation(fields: [testCaseId], references: [id])
}

model FileUpload {
  id        String   @id @default(cuid())
  filename  String   
  url       String   
  createdAt DateTime @default(now())
}

model SyncLog {
  id        String   @id @default(cuid())
  syncedAt  DateTime @default(now())
  status    String   // e.g., "success", "failure"
}

model ApiMetrics {
  id          String   @id @default(cuid())
  endpointId  String   
  requestCount Int      @default(0)
  successCount  Int     @default(0)
  failureCount  Int     @default(0)
  endpoint     Endpoint  @relation(fields: [endpointId], references: [id])
}